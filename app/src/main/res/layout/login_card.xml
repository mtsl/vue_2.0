<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_bg_shadow" >
    <RelativeLayout
        android:id="@+id/facebook_id"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_corner" >

        <LinearLayout
            android:id="@+id/shadow_id"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:background="@drawable/drop_shadow" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:background="@drawable/round_corner_fb"
                android:gravity="center"
                android:text="@string/fb_button_text"
                android:textColor="@color/white" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/g_plus__layout_id"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_below="@+id/facebook_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_corner" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/drop_shadow" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:background="@drawable/round_corner_g_puls"
                android:gravity="center"
                android:text="@string/google_button_text"
                android:textColor="@color/white" >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/g_plus__layout_id" />

</RelativeLayout>