<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_card_height"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" >

    <ImageView
        android:id="@+id/card_user_id"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:src="@drawable/vue_launcher_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="26dp"
        android:layout_toRightOf="@+id/card_user_id"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/card_user_heading_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:text="Dress for pool party" />

        <TextView
            android:id="@+id/card_user_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:text="Marry Long bottom" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/card_user_window_id"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
         >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
             />
    </RelativeLayout>

</RelativeLayout>